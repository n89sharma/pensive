{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Note",
  "description": "A note on a paragraph.",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "text": {
      "type": "string"
    },
    "quoteText": {
      "type": "string"
    },
    "user": {
      "type": "string"
    },
    "lockStatus": {
      "type": "boolean"
    },
    "chapter": {
      "type": "string"
    },
    "section": {
      "type": "string"
    },
    "paragraphs": {
      "type": "array",
      "items": {
        "$ref": "paragraph.json#"
      }
    }
  },
  "required": [
    "text"
  ]
}