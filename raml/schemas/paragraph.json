{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Paragraph",
  "description": "A paragraph from a book.",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "text": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "book": {
      "type": "string"
    },
    "chapter": {
      "type": "string"
    },
    "section": {
      "type": "string"
    },
    "noteIds": {
      "type": "array",
      "items": {
        "$ref": "note.json#"
      }
    }
  },
  "required": [
    "text"
  ]
}